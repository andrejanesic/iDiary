<p class="text-success mb-4"><%= notice %></p>
<h2><%= @diary.name %></h2>
<div class="d-flex justify-content-between align-items-center border-top border-bottom border-secondary py-2 my-2">
  <div>
    <%= link_to "Fitness entries", body_entries_path, class: "link link-primary" %>
  </div>
  <div>
    <%= link_to "Edit diary", edit_diary_path(@diary), class: "link link-primary" %> |
    <%= link_to "All diaries", diaries_path, class: "link link-secondary" %> | 
    <%= button_to "Delete diary", @diary, method: :delete, class: "link link-danger", style: "text-decoration:underline;padding:0;background:none; border:none;", form: { style: "display:inline-block;" } %>
  </div>
</div>
