<p class="text-success mb-4"><%= notice %></p>
<h2>
  Exercise Entry
</h2>
<div class="border-top border-bottom border-secondary py-2 my-2">
  <%= link_to "Edit", edit_exercise_entry_path(@exercise_entry), class: "link link-primary" %> |
  <%= link_to "See all", exercise_entries_path, class: "link link-secondary" %> | 
  <%= button_to "Delete", @exercise_entry, method: :delete, class: "link link-danger", style: "text-decoration:underline;padding:0;background:none; border:none;", form: { style: "display:inline-block;" } %>
</div>
<table class="table table-striped">
  <tbody>
          <tr>
        <td scope="row">
          <span class="fw-bold">Complete</span>
        </td>
        <td>
          
            <%= @exercise_entry.complete %>
          
        </td>
      </tr>
          <tr>
        <td scope="row">
          <span class="fw-bold">Note</span>
        </td>
        <td>
          
            <%= @exercise_entry.note %>
          
        </td>
      </tr>
          <tr>
        <td scope="row">
          <span class="fw-bold">Timestamp</span>
        </td>
        <td>
          
            <%= @exercise_entry.timestamp %>
          
        </td>
      </tr>
          <tr>
        <td scope="row">
          <span class="fw-bold">Diary</span>
        </td>
        <td>
          
            <%= @exercise_entry.diary %>
          
        </td>
      </tr>
      </tbody>
</table>
