<p class="text-success mb-4"><%= notice %></p>
<h2>
  Intake Entry
</h2>
<div class="border-top border-bottom border-secondary py-2 my-2">
  <%= link_to "Edit", edit_intake_entry_path(@intake_entry), class: "link link-primary" %> |
  <%= link_to "See all", intake_entries_path, class: "link link-secondary" %> | 
  <%= button_to "Delete", @intake_entry, method: :delete, class: "link link-danger", style: "text-decoration:underline;padding:0;background:none; border:none;", form: { style: "display:inline-block;" } %>
</div>
<table class="table table-striped">
  <tbody>
    <tr>
      <td scope="row">
        <span class="fw-bold">Consumed</span>
      </td>
      <td>
        <input type="checkbox" class="form-control-checkbox" <%= @intake_entry.consumed ? 'checked' : 'unchecked'%> disabled/>
      </td>
    </tr>
    <tr>
      <td scope="row">
        <span class="fw-bold">Note</span>
      </td>
      <td>
        <%= @intake_entry.note %>
      </td>
    </tr>
    <tr>
      <td scope="row">
        <span class="fw-bold">Timestamp</span>
      </td>
      <td>
        <%= @intake_entry.timestamp %>
      </td>
    </tr>
    <tr>
      <td scope="row">
        <span class="fw-bold">Diary</span>
      </td>
      <td>
        <%= @intake_entry.diary.name %>
      </td>
    </tr>
  </tbody>
</table>
