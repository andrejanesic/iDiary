<p class="text-success mb-4"><%= notice %></p>
<h2>
  Note Entry
</h2>
<div class="border-top border-bottom border-secondary py-2 my-2">
  <%= link_to "Edit", edit_note_entry_path(@note_entry), class: "link link-primary" %> |
  <%= link_to "See all", note_entries_path, class: "link link-secondary" %> | 
  <%= button_to "Delete", @note_entry, method: :delete, class: "link link-danger", style: "text-decoration:underline;padding:0;background:none; border:none;", form: { style: "display:inline-block;" } %>
</div>
<table class="table table-striped">
  <tbody>
    <tr>
      <td scope="row">
        <span class="fw-bold">Note</span>
      </td>
      <td>
        <%= @note_entry.note %>
      </td>
    </tr>
    <tr>
      <td scope="row">
        <span class="fw-bold">Timestamp</span>
      </td>
      <td>
        <%= @note_entry.timestamp %>
      </td>
    </tr>
    <tr>
      <td scope="row">
        <span class="fw-bold">Diary</span>
      </td>
      <td>
        <%= @note_entry.diary.name %>
      </td>
    </tr>
  </tbody>
</table>
