<%= form_with(model: goal) do |form| %>
  <% if goal.errors.any? %>
    <div class="p-3 mb-3 bg-warning">
      <h2 class="h6 fw-bold"><%= pluralize(goal.errors.count, "error") %> prohibited this diary from being saved:</h2>
      <ul class="mb-1">
        <% goal.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="mb-2 form-check">
    <%= form.check_box :active, class: "form-check-input", type: "checkbox" %>
    <%= form.label :active, class: "form-check-label" %>
  </div>
  <div class="mb-2">
    <%= form.label :calories, class: "form-label d-block" %>
    <%= form.text_field :calories, class: "form-control", type: "number", step: "100" %>
  </div>
  <div class="mb-2">
    <%= form.label :fats, class: "form-label d-block" %>
    <%= form.text_field :fats, class: "form-control", type: "number", step: "10" %>
  </div>
  <div class="mb-2">
    <%= form.label :carbs, class: "form-label d-block" %>
    <%= form.text_field :carbs, class: "form-control" , type: "number", step: "10" %>
  </div>
  <div class="mb-2">
    <%= form.label :proteins, class: "form-label d-block" %>
    <%= form.text_field :proteins, class: "form-control", type: "number", step: "10" %>
  </div>
  <div class="mb-2">
    <%= form.label :frequency, class: "form-label d-block" %>
    <select id="goal_frequency" name="goal[frequency]" class="form-select">
      <option selected value="daily">Daily</option>
      <option value="weekly">Weekly</option>
      <option value="monthly">Monthly</option>
      <option value="quarterly">Quarterly</option>
      <option value="yearly">Yearly</option>
    </select>
  </div>
  <div>
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
